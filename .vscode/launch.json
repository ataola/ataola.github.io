{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "yarn dev",
      "name": "dev",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "debug",
      "url": "http://localhost:3000",
      "skipFiles": ["<node_internals>/**"],
      "webRoot": "${workspaceFolder}/src"
    },
    // https://cn.vuejs.org/v2/cookbook/debugging-in-vscode.html
    {
      "type": "chrome",
      "request": "launch",
      "name": "vuejs: chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/src",
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "vuejs: firefox",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/src",
    }
  ]
}
